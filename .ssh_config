# vim: ft=sshconfig

Host 68k*
    User steve
    HostName 68k.org

Host rockpunk
    User steve
    Host rockpunk.org

Host github.com
    User git
    ForwardAgent no

Host *
    ForwardX11 no
    ForwardAgent yes
#    ProxyCommand none
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    ServerAliveInterval 20

Host bastion-staging
    HostName jump.staging-public.tubi.io
    User ubuntu
    IdentityFile ~/.ssh/staging.pem

Host bastion-production
    HostName jump.production-public.tubi.io
    User ubuntu
    IdentityFile ~/.ssh/production.pem

Host 172.30.*.*
    ProxyCommand ssh bastion-staging -W %h:%p
    User ubuntu
    IdentityFile ~/.ssh/staging.pem

Host 172.40.*.*
    ProxyCommand ssh bastion-production -W %h:%p
    User ubuntu
    IdentityFile ~/.ssh/production.pem
